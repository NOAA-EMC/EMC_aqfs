# VERSION "$Id: Makeinclude.Linux2_x86sun 1 2014-03-14 20:22:54Z coats $"
#
#       Linux for 32-bit x86 using the Sun Studio Express compiler suite

AR   = ar
CC   = suncc
FC   = sunf95
M4   = m4
CPP  = cpp
LINK = $(CC)

MODI = -M       ## Module-include-directory command

MFLAGS    =  -xarch=avx -xtarget=sandybridge -xdebugformat=dwarf

OMPFLAGS  = -openmp -stackvar
OMPLIBS   = -mt -lnsl
COPTFLAGS = -O3 ${MFLAGS}
FOPTFLAGS = -O3 ${MFLAGS}
FPPFLAGS  = 
FSFLAGS   = -fno-automatic
ARCHFLAGS = -DFLDMN=1 -DAUTO_ARRAYS=1 -DF90=1
PARFLAGS  =
ARCHLIB   = -Bdynamic -lc

M4DEFFILE = $(PVM_ROOT)/conf/$(PVM_ARCH).m4
PVMLIBS   = -L$(PVM_ROOT)/lib/$(PVM_ARCH) -lpvm3

